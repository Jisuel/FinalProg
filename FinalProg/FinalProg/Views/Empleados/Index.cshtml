@model IEnumerable<FinalProg.Models.Empleados>

@{
    ViewBag.Title = "Lista";
}
<link rel="stylesheet" type="text/css" href="~/Content/Style.css" />
<h2>Lista</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Emp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Codigo_Emp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha_Ingreso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cargos.Cargo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.Nombre_Dep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estatus)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_Emp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo_Emp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargos.Cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.Nombre_Dep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estatus)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id_Emp }, new { @Class = "btn btn-warning" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id_Emp }, new { @Class = "btn btn-primary" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id_Emp }, new { @Class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
