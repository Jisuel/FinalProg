@model IEnumerable<FinalProg.Models.Permisos>

@{
    ViewBag.Title = "Lista";
}
<link rel="stylesheet" type="text/css" href="~/Content/Style.css" />
<h2>Permisos</h2>

<form method="post" style="float:right">
    <input type="text" name="buscar" placeholder=" Empleado | Id Depart." class="form-control-static" style="border-radius:5px"/>
    <input type="submit" value="Buscar" class="btn btn-primary">
</form>
<br />
<p>
    @Html.ActionLink("Ver Todos", "Permisos")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_Permisos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hasta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Permisos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hasta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comentarios)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.Nombre)
            </td>
        </tr>
    }

</table>

